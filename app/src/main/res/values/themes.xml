<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Memoria" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryDark">@color/app_color</item>
        <item name="colorAccent">@color/app_color</item>
        <item name="android:textColor">@color/app_color</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryDark">@color/app_color</item>
        <item name="colorAccent">@color/app_color</item>
        <item name="android:textColor">@color/app_color</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="colorControlActivated">@color/app_color</item>
        <item name="colorControlHighlight">@color/app_color</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="button_style2">
        <item name="android:textColor">@color/app_color</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>
    <style name="button_style">
        <item name="android:textColor">@color/app_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>
    <style name="navigation_buttom_style">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="view_style3">
        <item name="android:background">#E2E2E2</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="text_view_style_noto_sans_arabic_bold" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/notosansarabic_bold</item>
    </style>
    <style name="text_view_style_noto_sans_arabic_extra_bold" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/notosansarabic_extrabold</item>
    </style>
    <style name="text_view_style_noto_sans_arabic_light" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/notosansarabic_light</item>
    </style>
    <style name="text_view_style_noto_sans_arabic_regular" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/notosansarabic_regular</item>
    </style>
    <style name="TextLabel" parent="Widget.AppCompat.EditText">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/hint_ABABAB</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/hint_ABABAB</item>
        <item name="colorControlNormal">@color/hint_ABABAB</item>
        <item name="colorControlActivated">@color/hint_ABABAB</item>
        <item name="fontFamily">@font/notosansarabic_regular</item>
    </style>
    <style name="EditTextLogin2">
        <!--        <item name="android:fontFamily">@font/janna</item>-->
        <item name="android:textColorHint">@color/gray_text_color</item>
        <item name="android:textColor">@color/app_color</item>
        <item name="android:paddingEnd">@dimen/_10ssp</item>
        <item name="android:paddingStart">@dimen/_10ssp</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:maxLength">1</item>
        <item name="android:gravity">center</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!--        <item name="android:background">@drawable/edit_text_gray_shape</item>-->
        <!--        <item name="colorControlNormal">@color/black2</item>-->
        <!--                <item name="backgroundTint">@color/black</item>-->
        <item name="colorControlActivated">@color/app_color</item>
    </style>
    <style name="EditTextsearch">
        <!--        <item name="android:fontFamily">@font/janna</item>-->
        <item name="android:textColorHint">@color/white</item>
        <item name="android:paddingEnd">@dimen/_10ssp</item>
        <item name="android:paddingStart">@dimen/_10ssp</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:radius">@dimen/_3ssp</item>
        <item name="colorControlActivated">@color/white</item>
    </style>
</resources>