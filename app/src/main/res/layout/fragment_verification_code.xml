<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.userCycle.VerificationCodeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp">

        <ImageView
            android:id="@+id/back_btu"
            android:layout_width="@dimen/_27sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:src="@drawable/ic_back_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_sub_category_title"
            android:fontFamily="@font/notosansarabic_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/enter_perified_code"
            android:textColor="@color/black_1F1F1F"
            android:textSize="@dimen/_16sdp" />
    </FrameLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_32sdp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:elevation="@dimen/_1sdp"
                android:padding="@dimen/_30sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_checklist_perified_code_image" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">

                <TextView
                    style="@style/text_view_style_noto_sans_arabic_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/perified_code_done_message"
                    android:textColor="@color/black_1F1F1F"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    style="@style/text_view_style_noto_sans_arabic_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:gravity="center"
                    android:text="@string/please_insert_perivied_code"
                    android:textColor="@color/black_1F1F1F"
                    android:textSize="@dimen/_14ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp">

                <FrameLayout
                    android:id="@+id/fragment_verification_code4_out_border_shape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:background="@drawable/black_out_border_shape">

                    <TextView
                        android:id="@+id/fragment_verification_code4_circle_shape"
                        style="@style/text_view_style_noto_sans_arabic_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="@dimen/_5sdp"
                        android:textColor="@color/black_1F1F1F"
                        android:textSize="@dimen/_22ssp"
                        android:textStyle="bold" />


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fragment_verification_code4_etx"
                        style="@style/EditTextLogin2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:fontFamily="@font/notosansarabic_bold"
                        android:inputType="number"
                        android:textColor="@color/black_1F1F1F"
                        android:textSize="@dimen/_22ssp" />

                    <ImageView
                        android:id="@+id/fragment_verification_cell_image4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:background="@color/hint_ABABAB"
                        android:elevation="@dimen/_4sdp"
                        android:padding="1dp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fragment_verification_code3_out_border_shape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:background="@drawable/black_out_border_shape">

                    <TextView
                        android:id="@+id/fragment_verification_code3_circle_shape"
                        style="@style/text_view_style_noto_sans_arabic_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="@dimen/_5sdp"
                        android:textColor="@color/black_1F1F1F"
                        android:textSize="@dimen/_22ssp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fragment_verification_code3_etx"
                        style="@style/EditTextLogin2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:fontFamily="@font/notosansarabic_bold"
                        android:inputType="number"
                        android:textColor="@color/black_1F1F1F"
                        android:textSize="@dimen/_22ssp" />

                    <ImageView
                        android:id="@+id/fragment_verification_cell_image3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:background="@color/hint_ABABAB"
                        android:elevation="@dimen/_4sdp"
                        android:padding="1dp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fragment_verification_code2_out_border_shape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:background="@drawable/black_out_border_shape">

                    <TextView
                        android:id="@+id/fragment_verification_code2_circle_shape"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="@dimen/_5sdp"
                        android:fontFamily="@font/notosansarabic_bold"
                        android:textColor="@color/black_1F1F1F"
                        android:textSize="@dimen/_21ssp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fragment_verification_code2_etx"
                        style="@style/EditTextLogin2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:fontFamily="@font/notosansarabic_bold"
                        android:inputType="number"
                        android:textColor="@color/black_1F1F1F"
                        android:textSize="@dimen/_21ssp" />

                    <ImageView
                        android:id="@+id/fragment_verification_cell_image2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:background="@color/hint_ABABAB"
                        android:elevation="@dimen/_4sdp"
                        android:padding="1dp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fragment_verification_code1_out_border_shape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:background="@drawable/black_out_border_shape">

                    <TextView
                        android:id="@+id/fragment_verification_code1_circle_shape"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="@dimen/_5sdp"
                        android:fontFamily="@font/notosansarabic_bold"
                        android:textColor="@color/black_1F1F1F"
                        android:textSize="@dimen/_21ssp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fragment_verification_code1_etx"
                        style="@style/EditTextLogin2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:fontFamily="@font/notosansarabic_bold"
                        android:inputType="number"
                        android:textColor="@color/black_1F1F1F"
                        android:textSize="@dimen/_21ssp" />

                    <ImageView
                        android:id="@+id/fragment_verification_cell_image1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:background="@color/hint_ABABAB"
                        android:elevation="@dimen/_4sdp"
                        android:padding="1dp" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_confirm_code_counter_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/notosansarabic_regular"
                    android:gravity="center"
                    android:text="@string/dont_send_code"
                    android:textColor="@color/hint_ABABAB"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:id="@+id/fragment_verification_resend_code_tv_btu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:elevation="@dimen/_5sdp"
                    android:fontFamily="@font/notosansarabic_regular"
                    android:gravity="center"
                    android:text="@string/resend_code"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_13ssp"
                    android:visibility="visible" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fragment_confirm_code_counter_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/notosansarabic_medium"
                    android:gravity="center"
                    android:text="@string/resend_code"
                    android:textColor="#626262"
                    android:textSize="@dimen/_13ssp" />
                <TextView
                    android:id="@+id/fragment_confirm_code_counter_resend_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:elevation="@dimen/_5sdp"
                    android:fontFamily="@font/notosansarabic_regular"
                    android:gravity="center"
                    android:text="00:00"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_15ssp"
                    android:visibility="visible" />
            </LinearLayout>

            <Button
                android:id="@+id/fragment_verified_code_continue_btu"
                style="@style/text_view_style_noto_sans_arabic_bold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_32sdp"
                android:background="@drawable/shap_buttom_blue"
                android:includeFontPadding="false"
                android:text="@string/continuee"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                app:backgroundTint="@null" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>