<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_280sdp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:gravity="center"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_2sdp">

        <LinearLayout
            android:id="@+id/linear_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:background="@drawable/shapauto"
                    android:elevation="@dimen/_4sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/card_will_finish_cautions_day_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosansarabic_semibold"
                            android:gravity="center"
                            android:text="04"
                            android:textColor="@color/red_hint_B53636"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosansarabic_regular"
                            android:gravity="center"

                            android:text="@string/day"
                            android:textColor="@color/red_hint_B53636"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>

                    <ImageView
                        style="@style/view_style3"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"

                        android:padding="1dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/card_will_finish_cautions_clock_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosansarabic_semibold"
                            android:gravity="center"
                            android:text="04"
                            android:textColor="@color/red_hint_B53636"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosansarabic_regular"
                            android:gravity="center"

                            android:text="@string/clock"
                            android:textColor="@color/red_hint_B53636"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>

                    <ImageView
                        style="@style/view_style3"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"

                        android:padding="1dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/card_will_finish_cautions_minute_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosansarabic_semibold"
                            android:gravity="center"
                            android:text="04"
                            android:textColor="@color/red_hint_B53636"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosansarabic_regular"
                            android:gravity="center"

                            android:text="@string/minute"
                            android:textColor="@color/red_hint_B53636"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>

                    <ImageView
                        style="@style/view_style3"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"

                        android:padding="1dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/card_will_finish_cautions_seconds_tv"
                            android:fontFamily="@font/notosansarabic_semibold"
                            android:gravity="center|center_vertical"
                            android:text="04"
                            android:textColor="@color/red_hint_B53636"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosansarabic_regular"
                            android:gravity="center"

                            android:text="@string/seconds"
                            android:textColor="@color/red_hint_B53636"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_130sdp">

                    <ImageView
                        android:id="@+id/card_will_finish_cautions_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ccccc" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:background="@drawable/gradient_background_black"
                        tools:layout_editor_absoluteX="0dp"
                        android:layout_gravity="bottom"
                        tools:layout_editor_absoluteY="0dp" />

                    <TextView
                        android:id="@+id/card_will_finish_cautions_status_details_tv"
                        android:layout_width="@dimen/_180sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_vertical"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:fontFamily="@font/notosansarabic_regular"
                        android:gravity="center"
                        android:shadowColor="@color/black_1F1F1F"
                        android:lineSpacingExtra="-10sp"
                        android:text="@string/Remaining_until_the_end_of_the_auction"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp" />

                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <TextView
                android:id="@+id/card_will_finish_cautions_details_tv"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:fontFamily="@font/notosansarabic_regular"
                android:gravity="start"
                android:lineSpacingExtra="-10sp"
                android:text="عقار بالمعابدة بجوار مسجد الإجابة بمكة"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp" />

            <TextView
                android:id="@+id/card_will_finish_cautions_show_details_btu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"

                android:layout_weight="1"
                android:background="@drawable/shap_buttom_blue"
                android:fontFamily="@font/notosansarabic_medium"
                android:gravity="center"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="@string/show_details"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>