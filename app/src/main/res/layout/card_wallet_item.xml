<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:gravity="center"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/card_wallet_price_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosansarabic_medium"
                    android:lineSpacingExtra="-10sp"
                    android:text="+ 15,000,000 ريال"
                    android:textAlignment="viewStart"
                    android:textColor="@color/grean_2D802D"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:id="@+id/card_wallet_date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosansarabic_regular"
                    android:gravity="end|center_vertical"
                    android:lineSpacingExtra="-10sp"
                    android:text="8/15/2022"
                    android:textColor="@color/gray_6B6B6B"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

            <TextView
                android:id="@+id/card_wallet_details_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:fontFamily="@font/notosansarabic_regular"
                android:gravity="start"
                android:lineSpacingExtra="-10sp"
                android:text="تم إيداغ مبلغ 15,000,000 ريال من المحفظة أصبح الآن الرصيد الإجمالي في المحفظة 22,000,000 ريال"
                android:textAlignment="viewStart"
                android:textColor="@color/black_1F1F1F"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/card_wallet_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_8sdp"

                android:background="@drawable/graen_shape"
                android:fontFamily="@font/notosansarabic_regular"
                android:paddingStart="@dimen/_24sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingEnd="@dimen/_24sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="@string/deposit"
                android:textColor="@color/black_1F1F1F"
                android:textSize="@dimen/_13ssp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>