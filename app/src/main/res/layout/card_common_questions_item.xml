<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fragment_client_details_layout_parent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@drawable/linear_shap_blue"
        android:elevation="@dimen/_2sdp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/card_common_questions_common_question_btu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/common_questions_item_que"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_weight="1"
                android:fontFamily="@font/notosansarabic_medium"
                android:gravity="center_vertical"
                android:lineSpacingExtra="-10dp"
                android:paddingEnd="@dimen/_8sdp"
                android:text="@string/If_the_auction_ends_and_it_does_not_reach_its_estimated_value_is_the_eye_awarde_to_the_highest_bidder"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/card_common_questions_common_image_btu"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="top|center"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:scaleType="center"
                android:src="@drawable/ic_arrow__1_down_common"
                app:tint="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_common_questions_common_tv_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/linear_shap_white"
            android:visibility="gone"
            android:orientation="vertical">


            <TextView
                android:id="@+id/card_common_questions_common_tv"
                style="@style/text_view_style_noto_sans_arabic_regular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start|center_vertical"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:lineSpacingExtra="-10dp"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:text="هذا النص هو مثال لنص يمكن أن يستبدل في نفس المساحة، لقد تم توليد هذا النص من مولد النص العربى، حيث يمكنك أن تولد مثل هذا النص أو العديد من النصوص الأخرى"
                android:textColor="@color/black_1F1F1F"
                android:textSize="@dimen/_12sdp"

                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
