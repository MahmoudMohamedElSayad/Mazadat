<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    android:paddingTop="@dimen/_25sdp"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_25sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/_46sdp"
                                android:layout_height="@dimen/_46sdp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_6sdp"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:layout_marginEnd="@dimen/_6sdp"
                                android:layout_marginBottom="@dimen/_6sdp"
                                android:src="@drawable/ic_logo_basic_image" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/fragment_setting_profile_photo_circularImageView"
                                android:layout_width="@dimen/_44sdp"
                                android:layout_height="@dimen/_44sdp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_6sdp"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:layout_marginEnd="@dimen/_6sdp"
                                android:layout_marginBottom="@dimen/_6sdp"
                                android:src="@drawable/ccccc" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/home_activity2_rate_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:elevation="@dimen/_5sdp"
                                android:fontFamily="@font/notosansarabic_bold"
                                android:text="مرحبا بك في المزايد"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11ssp" />

                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/home_activity2_home_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:drawableStart="@drawable/ic_home_icon"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/white_4DFFFFFF"
                        android:elevation="@dimen/_5sdp"
                        android:fontFamily="@font/notosansarabic_medium"
                        android:text="الرئيسية"
                        android:textColor="@color/white_4DFFFFFF"
                        android:textSize="@dimen/_13ssp" />

                    <TextView
                        android:id="@+id/home_activity2_wallet_tv"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:drawableStart="@drawable/ic_wallet_icone"
                        android:drawablePadding="@dimen/_10sdp"
                        android:elevation="@dimen/_5sdp"
                        android:fontFamily="@font/notosansarabic_medium"
                        android:text="@string/Portfolio"
                        android:textColor="@color/white_4DFFFFFF"
                        android:textSize="@dimen/_13ssp" />

                    <TextView
                        android:id="@+id/home_activity2_news_tv"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:drawableStart="@drawable/ic_icon_news"
                        android:drawablePadding="@dimen/_10sdp"


                        android:elevation="@dimen/_5sdp"
                        android:fontFamily="@font/notosansarabic_medium"
                        android:text="@string/news"
                        android:textColor="@color/white_4DFFFFFF"
                        android:textSize="@dimen/_13ssp" />

                    <TextView
                        android:id="@+id/home_activity2_Know_more_tv"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:drawableStart="@drawable/ic_know_about_icon"

                        android:drawablePadding="@dimen/_10sdp"
                        android:elevation="@dimen/_5sdp"
                        android:fontFamily="@font/notosansarabic_medium"
                        android:text="@string/Learn_more_about_us"
                        android:textColor="@color/white_4DFFFFFF"
                        android:textSize="@dimen/_13ssp" />

                    <TextView
                        android:id="@+id/home_activity2_change_language_tv"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"

                        android:drawableStart="@drawable/ic_language_icone"
                        android:drawablePadding="@dimen/_10sdp"
                        android:elevation="@dimen/_5sdp"
                        android:fontFamily="@font/notosansarabic_medium"
                        android:text="@string/Change_the_language"
                        android:textColor="@color/white_4DFFFFFF"

                        android:textSize="@dimen/_13ssp" />


                    <TextView
                        android:id="@+id/home_activity2_setting_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:drawableStart="@drawable/ic_vector_setting_icon"
                        android:drawablePadding="@dimen/_10sdp"
                        android:elevation="@dimen/_5sdp"
                        android:fontFamily="@font/notosansarabic_bold"
                        android:drawableTint="@color/white_4DFFFFFF"
                        android:text="@string/Settings"
                        android:textColor="@color/white_4DFFFFFF"
                        android:textSize="@dimen/_13ssp" />

                    <TextView
                        android:id="@+id/home_activity2_logout_tv"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:drawableStart="@drawable/ic_vector_login_icon"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/white"
                        android:elevation="@dimen/_5sdp"
                        android:fontFamily="@font/notosansarabic_medium"
                        android:text="@string/login_text"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp" />

                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/home_activity_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_380sdp"
                    android:layout_marginStart="@dimen/_150sdp"
                    android:layout_marginTop="@dimen/_70sdp"
                    android:foreground="#557C96"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_20sdp">


                </androidx.cardview.widget.CardView>

                <!--        </androidx.cardview.widget.CardView>-->

            </FrameLayout>


            <!--  -->

        </LinearLayout>
    </ScrollView>
</RelativeLayout>












